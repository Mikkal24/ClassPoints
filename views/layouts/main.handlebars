<!DOCTYPE html>
<html>

<head>
    <title>ClassPoints</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='//fonts.googleapis.com/css?family=Arimo' rel='stylesheet'>
    <link href='//fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <!--jQuery-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/flatly/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="assets/style.css">
</head>

<body>

<!-- Nav Bar -->
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">ClassPoints</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="leaderboard">Leaderboard <span class="sr-only">(current)</span></a></li>
        <li><a href="classes">Classes</a></li>
        <li><a href="classmates">Classmates</a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li><a data-toggle="modal" data-target="#createuserModal">Create User</a></li>
      </ul>
      <div class="nav navbar-right">
        <button type="button" class="btn navbar-btn" id="loginbtn" data-toggle="modal" data-target="#loginModal">Sign in</button>
      </div>
    </div>
  </div>
</nav>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="loginModalLabel">Sign In</h4>
      </div>
      <div class="modal-body">
        <form action="/user/login" method="GET">
          <div class="form-group">
            <label for="text" class="form-control-label">Email:</label><br>
            <input type="text" id="email" name="email">
          </div>
        </form>
        <button type="button" class="btn btn-primary">Sign In</button>
      </div>
    </div>
  </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createuserModal" tabindex="-1" role="dialog" aria-labelledby="createuserModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="createuserLabel">Create User</h4>
      </div>
      <div class="modal-body">
        <form action="/user/login" method="GET">
          <div class="form-group">
            <label for="text" class="form-control-label">First Name: (required)</label><br>
            <input type="text" id="fName" name="firstname" required="true"><br>
            <label for="text" class="form-control-label">Last Name: (required)</label><br>
            <input type="text" id="lName" name="lastname"><br>
            <label for="text" class="form-control-label">Email: (required)</label><br>
            <input type="text" id="lName" name="email"><br>
            <label for="text" class="form-control-label">Github Link:</label><br>
            <input type="text" id="email" name="githublink">
          </div>
        </form>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>

{{{ body }}}

<script>
$('#loginBtn').on("click",function(){
  var email = $("#email").val().trim();
  if(email){
    $.post("/user/login", {email:email},function(data){
      console.log(data);
      sessionStorage.setItem("userID",data);
      console.log(sessionStorage.getItem("userID"));
    })
  }
})
</script>

</body>
</html>